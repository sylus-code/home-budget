{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class="mx-auto" action="{{ path('login') }}" method="post">
        <div class="row mb-3">
            <label for="username" class="col-sm-2 col-form-label">Login</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
            </div>
        </div>
        <div class="row mb-3">
            <label for="password" class="col-sm-2 col-form-label">Has≈Ço</label>
            <div class="col-sm-6">
                <input type="password" class="form-control" id="password" name="_password">
            </div>
        </div>
        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <button type="submit" class="btn btn-primary">Zaloguj</button>
    </form>

{% endblock %}
